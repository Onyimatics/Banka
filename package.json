{
  "name": "banka",
  "version": "1.0.0",
  "description": "Banka is a light-weight core banking application that powers banking operations like account creation, customer deposit and withdrawals. This app is meant to support a single bank, where users can signup and create bank accounts online, but must visit the branch to withdraw or deposit money..",
  "main": "app.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test nyc --require @babel/register  mocha server/spec --exit",
    "start": "rimraf dist/ && babel  ./server -d dist && node dist/app.js",
    "start:dev": "nodemon --exec babel-node server/app.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "test-watch": "nodemon --exec \"npm test\""
  },
  "nyc": {
    "require": [
      "@babel/register"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Onyimatics/Banka.git"
  },
  "author": "Onyimatics",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Onyimatics/Banka/issues"
  },
  "homepage": "https://github.com/Onyimatics/Banka#readme",
  "dependencies": {
    "@babel/polyfill": "^7.4.3",
    "@babel/register": "^7.4.0",
    "@babel/runtime": "^7.4.3",
    "bcrypt": "^3.0.5",
    "bcrypt-nodejs": "0.0.3",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "coveralls": "^3.0.3",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "mocha": "^6.0.2",
    "morgan": "^1.9.1",
    "nyc": "^13.3.0",
    "randomatic": "^3.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.3",
    "@babel/plugin-transform-regenerator": "^7.4.3",
    "@babel/plugin-transform-runtime": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "cross-env": "^5.2.0",
    "eslint": "^5.15.3",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.10"
  }
}
